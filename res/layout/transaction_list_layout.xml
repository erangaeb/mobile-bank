<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#ffffff"
              android:orientation="vertical" >

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#333333"
            android:clickable="true" >

        <RelativeLayout
                android:layout_width="53dp"
                android:layout_height="fill_parent"
                android:background="@drawable/button_selector"
                android:layout_alignParentLeft="true"
                android:clickable="true"
                android:id="@+id/transaction_list_layout_back">
            <ImageView
                    android:layout_height="32dp"
                    android:layout_width="32dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/capture_layout_about_icon"
                    android:background="@drawable/back">
            </ImageView>

            <TextView
                    android:id="@+id/tab_splitter"
                    android:layout_width="1dp"

                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:background="#4a4a4a">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/transaction_list_layout_back">

            <TextView
                    android:id="@+id/transaction_list_layout_header_text"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="Transactions">
            </TextView>

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="53dp"
                android:layout_height="fill_parent"
                android:background="@drawable/button_selector"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:id="@+id/transaction_list_layout_help">
            <ImageView
                    android:layout_height="32dp"
                    android:layout_width="32dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/capture_layout_send_icon"
                    android:background="@drawable/help">
            </ImageView>

            <TextView
                    android:id="@+id/tab_splitter"
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:background="#4a4a4a">
            </TextView>
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:clickable="true" >

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/sync_header_selector"
                android:clickable="true"
                android:layout_weight="1"
                android:id="@+id/transaction_list_layout_unsynced_transaction_header">
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/transaction_list_layout_unsynced_transaction_header_text"
                    android:text="Unsynced">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/sync_header_selector"
                android:clickable="true"
                android:layout_weight="1"
                android:id="@+id/transaction_list_layout_all_transaction_header">
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/transaction_list_layout_all_transaction_header_text"
                    android:text="All">
            </TextView>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

        <ListView
                android:paddingLeft="10dp"
                android:paddingRight="4dp"
                android:background="#e5e5e5"
                android:id="@+id/transaction_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:cacheColorHint="@android:color/transparent"
                android:scrollbarStyle="outsideInset"
                android:divider="@drawable/list_seperator"
                android:listSelector="@drawable/list_selctor"
                android:dividerHeight="0dp">
        </ListView>

        <ViewStub
                android:id="@+id/transaction_list_layout_empty_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout="@layout/empty">
        </ViewStub>

    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="#333333" >

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:orientation="horizontal" >

            <RelativeLayout
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/done_button_selector"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:id="@+id/transaction_layout_done">
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Sync">
                </TextView>
            </RelativeLayout>

            <!--<RelativeLayout
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/done_button_selector"
                    android:clickable="true"
                    android:id="@+id/capture_layout_clear"
                    android:layout_weight="1">
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:id="@+id/capture_layout_clear_icon"
                        android:text="Cancel">
                </TextView>

            </RelativeLayout>-->
        </LinearLayout>
    </LinearLayout>

</LinearLayout>