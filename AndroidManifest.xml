<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.wasn.activities"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk android:minSdkVersion="10"/>

    <application
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:name="com.wasn.application.MobileBankApplication">
        <activity
                android:name=".MobileBankActivity"
                android:label="@string/app_name"
                android:theme="@android:style/Theme.Light.NoTitleBar"
                android:screenOrientation="portrait"
                android:configChanges="orientation"
                android:clearTaskOnLaunch="true"
                android:windowSoftInputMode="stateAlwaysHidden">
        </activity>

        <activity
                android:name=".TransactionDetailsActivity"
                android:screenOrientation="portrait"
                android:configChanges="orientation"
                android:launchMode="singleTask"
                android:clearTaskOnLaunch="true"
                android:theme="@android:style/Theme.NoTitleBar"
                android:windowSoftInputMode="stateAlwaysHidden">
        </activity>

        <activity
                android:name=".ClientDetailsActivity"
                android:screenOrientation="portrait"
                android:configChanges="orientation"
                android:launchMode="singleTask"
                android:clearTaskOnLaunch="true"
                android:theme="@android:style/Theme.NoTitleBar"
                android:windowSoftInputMode="stateAlwaysHidden">
        </activity>

        <activity
                android:name=".TransactionActivity"
                android:screenOrientation="portrait"
                android:configChanges="orientation"
                android:launchMode="singleTask"
                android:clearTaskOnLaunch="true"
                android:theme="@android:style/Theme.NoTitleBar"
                android:windowSoftInputMode="stateAlwaysHidden">
        </activity>

        <activity
                android:name=".SettingsActivity"
                android:screenOrientation="portrait"
                android:configChanges="orientation"
                android:launchMode="singleTask"
                android:clearTaskOnLaunch="true"
                android:theme="@android:style/Theme.NoTitleBar"
                android:windowSoftInputMode="stateAlwaysHidden">
        </activity>

        <activity
                android:name=".LoginActivity"
                android:screenOrientation="portrait"
                android:configChanges="orientation"
                android:launchMode="singleTask"
                android:clearTaskOnLaunch="true"
                android:theme="@android:style/Theme.NoTitleBar"
                android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name=".ClientListActivity"
                android:screenOrientation="portrait"
                android:configChanges="orientation"
                android:launchMode="singleTask"
                android:clearTaskOnLaunch="true"
                android:theme="@android:style/Theme.NoTitleBar"
                android:windowSoftInputMode="stateAlwaysHidden">
        </activity>

        <activity
                android:name=".DownloadActivity"
                android:screenOrientation="portrait"
                android:configChanges="orientation"
                android:launchMode="singleTask"
                android:clearTaskOnLaunch="true"
                android:theme="@android:style/Theme.NoTitleBar"
                android:windowSoftInputMode="stateAlwaysHidden">
        </activity>

        <activity
                android:name=".TransactionListActivity"
                android:screenOrientation="portrait"
                android:configChanges="orientation"
                android:launchMode="singleTask"
                android:clearTaskOnLaunch="true"
                android:theme="@android:style/Theme.NoTitleBar"
                android:windowSoftInputMode="stateAlwaysHidden">
        </activity>

        <activity
                android:name=".SummaryDetailsActivity"
                android:screenOrientation="portrait"
                android:configChanges="orientation"
                android:launchMode="singleTask"
                android:clearTaskOnLaunch="true"
                android:theme="@android:style/Theme.NoTitleBar"
                android:windowSoftInputMode="stateAlwaysHidden">
        </activity>

    </application>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

</manifest>
